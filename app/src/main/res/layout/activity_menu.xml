<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_layout_menu_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_white"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="">

    <Button
        android:id="@+id/btn_prismaS3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prisma_S3"
        android:textAlignment="center"
        android:textColor="@color/bg_color_white"
        android:background="@drawable/shape_hitung"
        android:textSize="@dimen/tv_input_potrait"/>

    <Button
        android:id="@+id/btn_balok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_balok"
        android:textAlignment="center"
        android:textColor="@color/bg_color_white"
        android:background="@drawable/shape_hitung"
        android:textSize="@dimen/tv_input_potrait"
        android:layout_margin="20dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>